{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 2,
    "number-leading-zero": "never",
    "selector-pseudo-element-colon-notation": "single",
    "unit-whitelist": ["em", "rem", "%", "px"],
    "rule-empty-line-before": null,
    "block-closing-brace-empty-line-before": null,
    "max-empty-lines": 2
  }
}
